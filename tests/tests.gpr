with "config/tests_config.gpr";
with "../pcap_ada.gpr";
project Tests is

   case Pcap_Ada.Pcap_Ada_Os_Kind is
      when "linux" =>
         for Source_Dirs use ("src/", "src/linux/");
      when "openbsd" =>
         for Source_Dirs use ("src/", "src/openbsd/");
      when "windows" =>
         for Source_Dirs use ("src/", "src/windows/");
      when others =>
         for Source_Dirs use ("src/");
   end case;
   for Object_Dir use "obj/" & Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("harness.adb");

   package Builder is
      Ada_Switches := Pcap_Ada.Builder.Ada_Switches;
      --  Ada_Switches := ("-v") & Ada_Switches;
      --  Ada_Switches := ("-vh") & Ada_Switches;
      --  Ada_Switches := ("--keep-temp-files") & Ada_Switches;
      for Default_Switches ("Ada") use Ada_Switches;
   end Builder;

   package Compiler is
      Ada_Switches := Pcap_Ada.Compiler.Ada_Switches;
      for Default_Switches ("Ada") use Tests_Config.Ada_Compiler_Switches & Ada_Switches;
   end Compiler;

   package Binder is
      Ada_Switches : = ("-Es");  --  enable symbolic tracebacks
      case Pcap_Ada.Pcap_Ada_Os_Kind is
         when "linux" | "windows" =>
            Ada_Switches := Ada_Switches & ("-shared");  --  link against a shared GNAT run-time when available
         when "openbsd" =>
            Ada_Switches := Ada_Switches & ("-static");  --  link against a static GNAT run-time
         when others =>
            Ada_Switches := Ada_Switches & ("-static");  --  link against a static GNAT run-time
      end case;
      for Default_Switches ("Ada") use Ada_Switches;
   end Binder;

   package Linker is
      Ada_Switches := ();
      case Pcap_Ada.Pcap_Ada_Os_Kind is
         when "windows" =>
            Ada_Switches := ("-L" & external ("SystemRoot") & "\System32\Npcap", "-lwpcap");
         when others =>
            Ada_Switches := ("-lpcap");
      end case;
      for Default_Switches ("Ada") use Ada_Switches;
   end Linker;

end Tests;
